  public void doConnect( ) 
    {
        try 
        {
           
            String URL = "jdbc:mysql://localhost:3306/ummah";
            String username = "root";
            String password = "1234";
            query = "select * from residents";
            
            connection = DriverManager.getConnection(URL,username,password);
            statement = connection.createStatement(ResultSet.TYPE_SCROLL_SENSITIVE,ResultSet.CONCUR_UPDATABLE);
	  resultSet = statement.executeQuery(query);
                     
            resultSet.first();
    
           
	  try {
           userlog j = new userlog();
  
    //  String usr = us.user;
    
        //JOptionPane.showMessageDialog(this, usr);
   String queryid="SELECT national_id FROM signup_login WHERE  username= '"+j.getUser1()+"'";
     Statement pst=connection.prepareStatement(queryid);
     
   ResultSet rs = pst.executeQuery(queryid);
    
      rs.first();
    //  rs.next();
     
          int id = rs.getInt(1);
   setid(id);
   } 
           
   catch (SQLException sqlEx) {
     JOptionPane.showMessageDialog(this, sqlEx.getMessage());
   }
            
        } catch (SQLException ex) 
        {
            JOptionPane.showMessageDialog(this, ex.getMessage());
        }
       try {
   
     String queryid="SELECT * From appoitments where national_id="+ getid()+"";
     Statement all=connection.prepareStatement(queryid);
   ResultSet qu = all.executeQuery(queryid);
    
    qu.next();  
      String idd = Integer.toString(getid());
           String serv = qu.getString(2);
          
           String city = qu.getString(3);
           String day = qu.getString(4);  
             String time = qu.getString(5);
           String month = qu.getString(6);
             String id = qu.getString(7);
             
             jLabel3.setText(serv +" in " + city +" on "+day+ "/"+month +" at " + time );
           
          //    jTextField3.setText(aga);
           
           
     //  }
     
        
   } 
           
   catch (SQLException sqlEx) {
     JOptionPane.showMessageDialog(this, sqlEx.getMessage());
   } 
    }
